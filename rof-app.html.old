    <script>
        // Configuration
        const N8N_WEBHOOK = "http://localhost:5678/webhook-test/2f2dadaf-dd24-4713-bb2c-48b1354a8d35";
        const STATUS_SERVER = 'http://localhost:3005';
        
        // State
        let currentStep = 1;
        let formData = {
            director: null,
            preferredName: '',
            marriageStatus: null,
            partnerName: '',
            insulinStatus: null,
            medicationStatus: null,
            medications: [],
            glucoseFile: null,
            enzymeFile: null
        };
        
        // Job status state
        let eventSource = null;
        let currentJobId = null;
        let completedSteps = [];
        
        // DOM Elements
        const startCard = document.getElementById('start-card');
        const startBtn = document.getElementById('start-btn');
        const onboardingContainer = document.getElementById('onboarding-container');
        const jobStatusContainer = document.getElementById('job-status-container');
        const newJobBtn = document.getElementById('new-job-btn');
        
        // Progress elements
        const progressDots = document.querySelectorAll('.progress-dot');
        const progressLines = document.querySelectorAll('.progress-line');
        
        // Status elements
        const currentStatusCard = document.getElementById('current-status-card');
        const statusIcon = document.getElementById('status-icon');
        const statusTitle = document.getElementById('status-title');
        const statusMessage = document.getElementById('status-message');
        const statusBadge = document.getElementById('status-badge');
        const timelineSteps = document.getElementById('timeline-steps');
        const timelineCount = document.getElementById('timeline-count');
        const jobDetails = document.getElementById('job-details');
        const jobDetailsGrid = document.getElementById('job-details-grid');
        
        // Start Flow
        startBtn.addEventListener('click', () => {
            startCard.style.opacity = '0';
            startCard.style.transform = 'scale(0.95)';
            setTimeout(() => {
                startCard.classList.add('hidden');
                onboardingContainer.classList.remove('hidden');
                showStep(1);
            }, 300);
        });
        
        // Show Step
        function showStep(step) {
            currentStep = step;
            updateProgress();
            
            document.querySelectorAll('.step-card').forEach(card => {
                card.classList.remove('active');
                card.classList.add('hidden');
            });
            
            const currentCard = document.getElementById(`step-${step}`);
            currentCard.classList.remove('hidden');
            setTimeout(() => currentCard.classList.add('active'), 50);
        }
        
        // Update Progress
        function updateProgress() {
            progressDots.forEach((dot, index) => {
                const stepNum = index + 1;
                dot.classList.remove('active', 'completed');
                if (stepNum < currentStep) {
                    dot.classList.add('completed');
                } else if (stepNum === currentStep) {
                    dot.classList.add('active');
                }
            });
            
            progressLines.forEach((line, index) => {
                if (index < currentStep - 1) {
                    line.classList.add('active');
                } else {
                    line.classList.remove('active');
                }
            });
        }
        
        // Step 1: Director Selection
        document.querySelectorAll('#step-1 .option-card').forEach(card => {
            card.addEventListener('click', () => {
                document.querySelectorAll('#step-1 .option-card').forEach(c => c.classList.remove('selected'));
                card.classList.add('selected');
                formData.director = card.dataset.value;
                document.querySelector('#step-1 .next-btn').disabled = false;
            });
        });
        
        // Step 2: Patient Name
        const patientNameInput = document.getElementById('patient-name');
        patientNameInput.addEventListener('input', () => {
            formData.preferredName = patientNameInput.value.trim();
            document.querySelector('#step-2 .next-btn').disabled = formData.preferredName.length === 0;
        });
        
        // Step 3: Family Present
        const familyNameSection = document.getElementById('family-name-section');
        const familyNameInput = document.getElementById('family-name');
        
        document.querySelectorAll('#step-3 .option-card').forEach(card => {
            card.addEventListener('click', () => {
                document.querySelectorAll('#step-3 .option-card').forEach(c => c.classList.remove('selected'));
                card.classList.add('selected');
                formData.marriageStatus = card.dataset.value;
                
                if (formData.marriageStatus === 'FamilyPresent') {
                    familyNameSection.classList.add('visible');
                    document.querySelector('#step-3 .next-btn').disabled = familyNameInput.value.trim().length === 0;
                } else {
                    familyNameSection.classList.remove('visible');
                    formData.partnerName = '';
                    document.querySelector('#step-3 .next-btn').disabled = false;
                }
            });
        });
        
        familyNameInput.addEventListener('input', () => {
            formData.partnerName = familyNameInput.value.trim();
            if (formData.marriageStatus === 'FamilyPresent') {
                document.querySelector('#step-3 .next-btn').disabled = formData.partnerName.length === 0;
            }
        });
        
        // Step 4: Insulin Dependent
        document.querySelectorAll('#step-4 .option-card').forEach(card => {
            card.addEventListener('click', () => {
                document.querySelectorAll('#step-4 .option-card').forEach(c => c.classList.remove('selected'));
                card.classList.add('selected');
                formData.insulinStatus = card.dataset.value;
                document.querySelector('#step-4 .next-btn').disabled = false;
            });
        });
        
        // Step 5: Medications
        const medicationChips = document.querySelectorAll('#step-5 .medication-chip:not(.none-option)');
        const noneOption = document.querySelector('#step-5 .none-option');
        
        medicationChips.forEach(chip => {
            chip.addEventListener('click', () => {
                chip.classList.toggle('selected');
                noneOption.classList.remove('selected');
                updateMedications();
            });
        });
        
        noneOption.addEventListener('click', () => {
            medicationChips.forEach(c => c.classList.remove('selected'));
            noneOption.classList.toggle('selected');
            updateMedications();
        });
        
        function updateMedications() {
            if (noneOption.classList.contains('selected')) {
                formData.medicationStatus = 'no';
                formData.medications = [];
            } else {
                const selected = Array.from(document.querySelectorAll('#step-5 .medication-chip.selected:not(.none-option)'));
                formData.medications = selected.map(c => c.dataset.value);
                formData.medicationStatus = formData.medications.length > 0 ? 'yes' : null;
            }
            const hasSelection = noneOption.classList.contains('selected') || formData.medications.length > 0;
            document.querySelector('#step-5 .next-btn').disabled = !hasSelection;
        }
        
        // Step 6: File Uploads
        const glucoseFileInput = document.getElementById('glucose-file');
        const enzymeFileInput = document.getElementById('enzyme-file');
        const glucoseLabel = document.getElementById('glucose-label');
        const enzymeLabel = document.getElementById('enzyme-label');
        const uploadGlucose = document.getElementById('upload-glucose');
        const uploadEnzyme = document.getElementById('upload-enzyme');
        const submitBtn = document.getElementById('submit-btn');
        
        glucoseFileInput.addEventListener('change', () => {
            const file = glucoseFileInput.files[0];
            if (file && file.type === 'application/pdf') {
                formData.glucoseFile = file;
                glucoseLabel.textContent = ` ${file.name}`;
                uploadGlucose.classList.add('has-file');
            } else {
                formData.glucoseFile = null;
                glucoseLabel.textContent = 'Blood Test';
                uploadGlucose.classList.remove('has-file');
            }
            validateStep6();
        });
        
        enzymeFileInput.addEventListener('change', () => {
            const file = enzymeFileInput.files[0];
            if (file && file.type === 'application/pdf') {
                formData.enzymeFile = file;
                enzymeLabel.textContent = ` ${file.name}`;
                uploadEnzyme.classList.add('has-file');
            } else {
                formData.enzymeFile = null;
                enzymeLabel.textContent = 'Enzymes';
                uploadEnzyme.classList.remove('has-file');
            }
            validateStep6();
        });
        
        function validateStep6() {
            submitBtn.disabled = !(formData.glucoseFile && formData.enzymeFile);
        }
        
        // Navigation Buttons
        document.querySelectorAll('.next-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                if (currentStep < 6) {
                    showStep(currentStep + 1);
                }
            });
        });
        
        document.querySelectorAll('.back-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                if (currentStep > 1) {
                    showStep(currentStep - 1);
                }
            });
        });
        
        // Generate unique job ID
        function generateJobId() {
            return 'job_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
        }
        
        // Submit
        submitBtn.addEventListener('click', async () => {
            submitBtn.disabled = true;
            submitBtn.textContent = 'Submitting...';
            
            const jobId = generateJobId();
            
            try {
                const payload = new FormData();
                payload.append('jobId', jobId);
                payload.append('glucoseFile', formData.glucoseFile);
                payload.append('enzymeFile', formData.enzymeFile);
                payload.append('file', formData.glucoseFile);
                payload.append('preferredName', formData.preferredName);
                payload.append('director', formData.director);
                payload.append('marriageStatus', formData.marriageStatus);
                if (formData.marriageStatus === 'FamilyPresent') {
                    payload.append('partnerName', formData.partnerName);
                }
                payload.append('insulinStatus', formData.insulinStatus);
                payload.append('medicationStatus', formData.medicationStatus);
                if (formData.medicationStatus === 'yes' && formData.medications.length > 0) {
                    payload.append('medicationsJson', JSON.stringify(formData.medications));
                }
                
                const response = await fetch(N8N_WEBHOOK, {
                    method: 'POST',
                    body: payload
                });
                
                if (!response.ok) throw new Error('Submission failed');
                
                // Show job status
                showJobStatus(jobId);
                connectToStatusUpdates(jobId);
                
            } catch (error) {
                console.error('Error:', error);
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit for Analysis';
                alert('Submission failed. Please try again.');
            }
        });
        
        // Show Job Status
        function showJobStatus(jobId) {
            onboardingContainer.classList.add('hidden');
            jobStatusContainer.classList.remove('hidden');
            
            // Reset state
            completedSteps = [];
            updateTimeline();
            
            // Set initial status
            updateCurrentStatus('processing', 'Patient Details Ingested', `Job ID: ${jobId.slice(0, 12)}...`);
        }
        
        // Update Current Status Card (in place, no new cards)
        function updateCurrentStatus(status, title, subtitle) {
            // Update card styling
            currentStatusCard.className = `current-status-card ${status}`;
            statusIcon.className = `status-icon-container ${status}`;
            statusBadge.className = `status-badge ${status}`;
            
            // Update content
            statusTitle.textContent = title;
            statusMessage.textContent = subtitle;
            
            // Update badge text
            const badgeText = {
                'processing': 'Processing',
                'complete': 'Complete',
                'error': 'Error'
            };
            statusBadge.textContent = badgeText[status] || 'Processing';
            
            // Update icon
            const spinner = statusIcon.querySelector('.spinner-ring');
            if (status === 'complete') {
                spinner.style.display = 'none';
                statusIcon.querySelector('svg').innerHTML = '<path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>';
            } else if (status === 'error') {
                spinner.style.display = 'none';
                statusIcon.querySelector('svg').innerHTML = '<path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>';
            } else {
                spinner.style.display = 'block';
                statusIcon.querySelector('svg').innerHTML = '<path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>';
            }
            
            // Show new job button on completion
            if (status === 'complete') {
                newJobBtn.classList.remove('hidden');
            }
        }
        
        // Add to Timeline (compact chips)
        function addToTimeline(title) {
            completedSteps.push(title);
            updateTimeline();
        }
        
        function updateTimeline() {
            if (completedSteps.length === 0) {
                timelineSteps.innerHTML = '<div class="timeline-empty">No steps completed yet</div>';
                timelineCount.textContent = '0 steps';
            } else {
                timelineSteps.innerHTML = completedSteps.map(step => `
                    <div class="timeline-step complete">
                        <div class="timeline-step-dot"></div>
                        <span>${step}</span>
                    </div>
                `).join('');
                timelineCount.textContent = `${completedSteps.length} step${completedSteps.length !== 1 ? 's' : ''}`;
            }
        }
        
        // Show Job Details
        function showJobDetails(details) {
            if (!details || Object.keys(details).length === 0) return;
            
            jobDetailsGrid.innerHTML = Object.entries(details).map(([key, value]) => {
                const formattedKey = key.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase());
                return `
                    <div class="job-detail-row">
                        <span class="job-detail-label">${formattedKey}</span>
                        <span class="job-detail-value">${value}</span>
                    </div>
                `;
            }).join('');
            
            jobDetails.classList.remove('hidden');
        }
        
        // Connect to SSE
        function connectToStatusUpdates(jobId) {
            if (eventSource) {
                eventSource.close();
            }
            
            currentJobId = jobId;
            eventSource = new EventSource(`${STATUS_SERVER}/events?jobId=${jobId}`);
            
            eventSource.onopen = () => {
                console.log('Connected to status updates for job:', jobId);
            };
            
            eventSource.onmessage = (event) => {
                try {
                    const data = JSON.parse(event.data);
                    console.log('Status update received:', data);
                    
                    if (data.jobId && data.jobId !== currentJobId) {
                        return;
                    }
                    
                    if (data.type === 'status_update') {
                        // Add previous status to timeline before updating
                        const prevTitle = statusTitle.textContent;
                        if (prevTitle && prevTitle !== 'Patient Details Ingested') {
                            addToTimeline(prevTitle);
                        } else if (prevTitle === 'Patient Details Ingested') {
                            addToTimeline('Ingested');
                        }
                        
                        // Update current status
                        updateCurrentStatus(
                            data.status === 'complete' ? 'complete' : 'processing',
                            data.title,
                            data.subtitle
                        );
                    } else if (data.type === 'job_complete') {
                        // Add final step to timeline
                        const prevTitle = statusTitle.textContent;
                        if (prevTitle) {
                            addToTimeline(prevTitle);
                        }
                        
                        // Update to complete status
                        updateCurrentStatus('complete', data.title, data.subtitle);
                        
                        // Show details if provided
                        if (data.details) {
                            showJobDetails(data.details);
                        }
                    }
                } catch (error) {
                    console.error('Error parsing status update:', error);
                }
            };
            
            eventSource.onerror = (error) => {
                console.error('SSE connection error:', error);
                setTimeout(() => connectToStatusUpdates(jobId), 5000);
            };
        }
        
        // Disconnect SSE
        function disconnectStatusUpdates() {
            if (eventSource) {
                eventSource.close();
                eventSource = null;
            }
            currentJobId = null;
            completedSteps = [];
        }
        
        // New Job
        newJobBtn.addEventListener('click', () => {
            disconnectStatusUpdates();
            
            // Reset form data
            formData = {
                director: null,
                preferredName: '',
                marriageStatus: null,
                partnerName: '',
                insulinStatus: null,
                medicationStatus: null,
                medications: [],
                glucoseFile: null,
                enzymeFile: null
            };
            
            // Reset UI
            document.querySelectorAll('.option-card, .medication-chip').forEach(c => c.classList.remove('selected'));
            document.querySelectorAll('input[type="text"]').forEach(i => i.value = '');
            document.querySelectorAll('input[type="file"]').forEach(i => i.value = '');
            glucoseLabel.textContent = 'Blood Test';
            enzymeLabel.textContent = 'Enzymes';
            uploadGlucose.classList.remove('has-file');
            uploadEnzyme.classList.remove('has-file');
            familyNameSection.classList.remove('visible');
            newJobBtn.classList.add('hidden');
            jobDetails.classList.add('hidden');
            jobDetailsGrid.innerHTML = '';
            
            // Reset buttons
            document.querySelectorAll('.next-btn, #submit-btn').forEach(btn => btn.disabled = true);
            submitBtn.textContent = 'Submit for Analysis';
            
            // Show start
            jobStatusContainer.classList.add('hidden');
            startCard.classList.remove('hidden');
            startCard.style.opacity = '1';
            startCard.style.transform = 'scale(1)';
        });
        
        // Manual update function (for testing)
        window.updateJobStatus = function(data) {
            if (data.type === 'status_update') {
                const prevTitle = statusTitle.textContent;
                if (prevTitle) addToTimeline(prevTitle);
                updateCurrentStatus(data.status === 'complete' ? 'complete' : 'processing', data.title, data.subtitle);
            } else if (data.type === 'job_complete') {
                const prevTitle = statusTitle.textContent;
                if (prevTitle) addToTimeline(prevTitle);
                updateCurrentStatus('complete', data.title, data.subtitle);
                if (data.details) showJobDetails(data.details);
            }
        };
    </script>
</body>
</html>